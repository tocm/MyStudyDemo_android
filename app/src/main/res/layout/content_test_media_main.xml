<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sample.study.andy.andydemos.function.media.activity.TestMediaMainActivity"
    tools:showIn="@layout/app_bar_test_media_main">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio_intent_view"
        android:id="@+id/audio_intent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="testAudioIntent"
        android:layout_alignEnd="@+id/test_play_recording_audio" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video_intent_view"
        android:id="@+id/video_intent"
        android:layout_below="@+id/audio_intent"
        android:onClick="testVideoIntent"
        android:layout_alignEnd="@+id/test_play_recording_audio"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="smaple_mediaplayer"
        android:id="@+id/custom_mediaplayer"
        android:layout_below="@+id/video_intent"
        android:layout_alignStart="@+id/video_intent"
        android:onClick="testSampleMediaPlayer"
        android:layout_alignEnd="@+id/network_media_res" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NetworkMediaDataResources"
        android:id="@+id/network_media_res"
        android:layout_below="@+id/custom_mediaplayer"
        android:onClick="testNetworkMediaPlayer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recording"
        android:id="@+id/test_recording"
        android:layout_below="@+id/network_media_res"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/test_play_recording_audio"
        android:onClick="testRecording" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Recording audio"
        android:id="@+id/test_play_recording_audio"
        android:layout_below="@+id/test_recording"
        android:layout_alignEnd="@+id/network_media_res"
        android:layout_alignParentStart="true"
        android:onClick="testRecorderPlay" />
</RelativeLayout>
