<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/content_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sample.study.andy.andydemos.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEMO GO ScrollActivity"
        android:id="@+id/button_scrollactivity"
        android:onClick="goScrollActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go settingactivity"
        android:id="@+id/button_settingactivity"
        android:onClick="goSettingsActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go loginactivity"
        android:id="@+id/button_loginactivity"
        android:onClick="goLoginActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go tabbedactivity"
        android:id="@+id/button_tabbedactivity"
        android:onClick="goTabbedActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go navigation"
        android:id="@+id/button_navigation"
        android:onClick="goNavigatonActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go masteractivity"
        android:id="@+id/button_masteractivity"
        android:onClick="goMasterDetailActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST IPCMessenger"
        android:id="@+id/button_IPCMessenger"
        android:onClick="testIPCMessenger" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST RefreshAndLoadMore"
        android:id="@+id/button_refreshLoadMore"
        android:onClick="testRefreshAndLoadMore" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST RxJava"
        android:id="@+id/button_rxjava"
        android:onClick="testRxJava" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rx_img_test"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST DatabindingRecylerview"
        android:id="@+id/button_dataBindingRecylerView"
        android:onClick="testDataBindingRecylerView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST EditText dataBinding"
        android:id="@+id/button_databindingEdittext"
        android:onClick="testDataBindingEditText" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST MEDIA"
        android:id="@+id/button_testMedia"
        android:onClick="testMedia" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST HandlerThread"
        android:id="@+id/button_testHandlerThread"
        android:onClick="testHandlerThread" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST Eventbus"
        android:id="@+id/button_testEventbus"
        android:onClick="testEventBus" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST IOC"
        android:id="@+id/button_testIoc"
        android:onClick="testIOC" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST EXPAND RECYCLER VIEW"
        android:id="@+id/button_testExpandrecyclerview"
        android:onClick="testExpandsRecyclerView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST TabLayut Viewpage VIEW"
        android:id="@+id/button_testTabLayoutViewpage"
        android:onClick="testTablaViewpage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST Accessibility"
        android:id="@+id/button_testAccessibility"
        android:onClick="testAccessibility" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/large_text">
        </TextView>

    </android.support.v4.widget.NestedScrollView>



</LinearLayout>
